{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ContentPath": "content",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpirationMinutes": 60
  },
  "ImageSizes": [300, 600, 1200],
  "RateLimiting": {
    "RequestLimit": 100,
    "TimeWindowMinutes": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "Not used - file-based system"
  }
}
